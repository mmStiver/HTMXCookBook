@page "{handler?}/{Id:int?}"
@model HtmxCookbook.Pages.EditRow.IndexModel
@section Styles {
    <link rel="stylesheet" href="~/@(nameof(HtmxCookbook)).styles.css" />
}

@if (Model?.Contacts?.Count() > 0){
<table class="table delete-row-example">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
        <tbody hx-target="closest tr" hx-swap="outerHTML" hx-headers='{"RequestVerificationToken": "@Model.RequestToken"}'>
        @foreach(var contact in Model.Contacts){
            <partial name="_TableRow" model="@contact" />
        }
    </tbody>
</table>
}